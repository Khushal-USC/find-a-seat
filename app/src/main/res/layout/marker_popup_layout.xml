<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- res/layout/marker_popup_layout.xml -->

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="224dp"
        android:layout_height="346dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="320dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="53dp"
        android:padding="8dp"
        android:text="Marker Info"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/popup_option1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/popup_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="26dp"
        android:padding="8dp"
        android:text="Option 1"
        app:layout_constraintBottom_toTopOf="@+id/popup_option2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/popup_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="350dp"
        android:padding="8dp"
        android:text="Option 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="42dp"
        android:layout_height="58dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="591dp"
        android:text="X"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>